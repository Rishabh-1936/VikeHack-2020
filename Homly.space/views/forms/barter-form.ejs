<div class="container">
    <form action="/barter" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="pname">Product Name</label>
            <input type="text" class="form-control" id="pname" placeholder="Name" value="" name="pname" required>
        </div>
        <div class="form-group">
            <label for="pdesc">Product Description</label>
            <textarea class="form-control" id="pdesc" name="pdesc" value="" rows="2" placeholder="Description"
                required></textarea>
        </div>
        <div class="form-group">
            <label for="pcategory">Category</label>
            <select class="form-control" id="pcategory" name="pcategory" required>
                <option value="food">Food</option>
                <option value="dairy">Dairy</option>
                <option value="furniture">Furniture</option>
                <option value="medical">Medical</option>
                <option value="clothing">Clothing</option>
                <option value="sports">Sports</option>
                <option value="kids">Kids</option>
                <option value="electronics">Electronics</option>
            </select>
        </div>
        <div class="form-group">
            <label for="pimage">Product Image</label>
            <input type="file" class="form-control-file" id="pimage" name="pimage" value="" required>
        </div>
        <div style="display: flex;justify-content: center;">
            <% if(isAuthenticated) { %>
            <button type="submit" class="btn btn-primary" style="margin: auto;">Submit</button>
            <% } else { %>
            <div>
                <button type="button" class="btn btn-primary" style="display: block;"
                    onclick="disable_func()">Submit</button>
                <small class="pt-2" id="alert-text" style="color:#ff0000eb;display: none;">*Please <a
                        href="/login">login</a></small> </div>
            <% } %>
        </div>
    </form>
</div>

<script>
    function disable_func() {
        document.getElementById('alert-text').style.display = "block";
    }
</script>