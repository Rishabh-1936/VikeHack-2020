<body>
    <div id="main">
        <%- include('partials/nav')%>

        <div class="header my-5">

        </div>
        <div class="content">

            <div class="row">

                <%-include('carousel.ejs')%>

            </div>
            <hr>
            <div class="row">
                <div class="col-5">
                    <h1>Request For help</h1>
                    <h3>Food and Shelter</h3>
                    <a class="btn btn-primary" href="/request/shelter">Request</a>
                </div>
                <div class="col-7">
                    <img src="../public/images/covid/food.png" class="img-fluid-1" alt="...">
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-7">
                    <img src="../public/images/covid/request.svg" class="img-fluid-2" alt="...">
                </div>
                <div class="col-5">
                    <h1>Help Others</h1>
                    <h3>By getting started as volunteer</h3>
                    <a class="btn btn-primary" href="/signup">SignUp as Volunteer</a>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-5">
                    <h1>Not feeling well</h1>
                    <h3>Get Health Checkup and Virtual Report</h3>
                    <a class="btn btn-primary" href="/health">Get Diagnose</a>
                </div>
                <div class="col-7">
                    <img src="../public/images/covid/doctor.png" class="img-fluid-3" alt="...">
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-7">
                    <img src="../public/images/covid/facts.svg" class="img-fluid-3" alt="...">
                </div>
                <div class="col-5">
                    <h1>Get your facts right</h1>
                    <a class="btn btn-primary" href="/covid">Check the live stats</a>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-6">
                    <h1>Want to contribute</h1>
                    <h3>Contibute money and food to help others</h3>
                    <a class="btn btn-primary trigger" href="#" data-izimodal-open="#modal-custom"
                        data-izimodal-transitionin="fadeInDown">Let's Donate</a>
                    <!-- <a class="btn btn-primary" href="/health">Let's Donate</a> -->
                </div>
                <div class="col-6">
                    <img src="../public/images/covid/donate.svg" class="img-fluid-3" alt="...">
                </div>
            </div>
        </div>
    </div>
    <div id="modal-custom" aria-hidden="true" aria-labelledby="modal-custom" role="dialog" class="iziModal"
        data-izimodal-group="grupo1" style="z-index: -1;">
        <div class="iziModal-wrap" style="height: 365px;">
            <div class="iziModal-content" style="padding: 0px;">
                <button data-izimodal-close="" class="icon-close"></button>
                <header>
                    <a href="" id="signin">Sign in</a>
                    <a href="" class="active">New Account</a>
                </header>
                <div class="sections">
                    <section class="hide">
                        <input type="text" placeholder="Username">
                        <input type="password" placeholder="Password">
                        <footer>
                            <button data-izimodal-close="">Cancel</button>
                            <button class="submit">Log in</button>
                        </footer>
                    </section>
                    <section>
                        <input type="text" placeholder="Username">
                        <input type="text" placeholder="Email">
                        <input type="password" placeholder="Password">
                        <label for="check"><input type="checkbox" name="checkbox" id="check" value="1"> I agree to the
                            <u>Terms</u>.</label>
                        <footer>
                            <button data-izimodal-close="" data-izimodal-transitionout="bounceOutDown">Cancel</button>
                            <button class="submit">Create Account</button>
                        </footer>
                    </section>
                </div>
            </div>
        </div>
    </div>

